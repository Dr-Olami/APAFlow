# SMEFlow Environment Configuration
# Copy this file to .env and update with your actual values

# Application
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://smeflow:smeflow@localhost:5432/smeflow
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=smeflow
KEYCLOAK_CLIENT_ID=smeflow-api
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin_password

# Cerbos Configuration
CERBOS_HOST=localhost
CERBOS_PORT=3593

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# LLM Providers
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key

# Observability
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_HOST=https://cloud.langfuse.com

# Voice Communication
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_WS_URL=ws://localhost:7880

# African Market Integrations
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
PAYSTACK_SECRET_KEY=your_paystack_secret_key
JUMIA_API_KEY=your_jumia_api_key

# N8n Integration Configuration
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key-here
N8N_TIMEOUT=30
N8N_MAX_RETRIES=3
N8N_TENANT_PREFIX=smeflow

# API Security Configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10
RATE_LIMIT_BLOCK_DURATION=15
CORS_ORIGINS=https://localhost:3000,https://app.sme-flow.org
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000

# Multi-tenancy
DEFAULT_TENANT_REGION=NG
MAX_TENANTS_PER_INSTANCE=10

# Performance
CACHE_TTL_SECONDS=300
LLM_CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=100

# Development
NODE_ENV=development
