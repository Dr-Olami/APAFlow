# Production Environment Variables for SMEFlow
# Copy this file to .env.prod and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=smeflow
POSTGRES_DB=smeflow

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Keycloak Configuration
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_admin_password
KEYCLOAK_DB_PASSWORD=your_secure_keycloak_db_password
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret

# Application Security
SECRET_KEY=your_very_long_secret_key_for_app_security_minimum_50_chars
JWT_SECRET_KEY=your_jwt_secret_key_for_token_signing

# SSL/Domain Configuration
DOMAIN=smeflow.com
SSL_EMAIL=admin@smeflow.com

# LLM Provider API Keys
OPENAI_API_KEY=sk-your_openai_api_key
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Monitoring & Observability
LANGFUSE_SECRET_KEY=sk-lf-your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=pk-lf-your_langfuse_public_key
LANGFUSE_HOST=https://cloud.langfuse.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Backup Configuration
BACKUP_S3_BUCKET=smeflow-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
